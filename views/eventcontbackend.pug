
extends ./layout.pug

block contenido
    div
        nav(class="navbar navbar-light navbar-expand-md navigation-clean" style="background-color: rgb(244,216,71);")
            .container
                a(class="navbar-brand" href="/event" style="font-family: 'Sawarabi Gothic', sans-serif;") MEETUS
                button(data-toggle="collapse" class="navbar-toggler" data-target="#navcol-1")
                    span(class="sr-only") Toggle navigation
                    span(class="navbar-toggler-icon")
                .collapse.navbar-collapse#navcol-1
                    ul.nav.navbar-nav.ml-auto
                        li.nav-item
                            a(href="/event" class="nav-link active") Eventos sugeridos
                        li.nav-item
                            a(href="/user" class="nav-link") Perfil
                        
                        
    .article-list
        #event.container(style='margin: 10px;')
            .intro
            h3.text-center
                strong Eventos
            .row.articles
                script.
                    cont = 0
                each evento in eventos
                    .col-sm-6.col-md-4.item
                        a(href="#")
                        img.img-fluid(src="../public/img/"+evento.img, style="width: 325px")
                        h3.name(id="name")=evento.nombre
                        p.description=evento.descripcion
                        a.action(href="#" onclick="this.href = url")
                            i.fa.fa-arrow-circle-right(style='color: #f4d847;')
                        script.
                            cont = cont + 1
                            url = "event_" + cont
                            name = document.getElementById("name")
